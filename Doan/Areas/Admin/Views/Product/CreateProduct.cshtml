        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Giá sản phẩm</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.GiaSP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GiaSP, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Nhà sản xuất</label>
