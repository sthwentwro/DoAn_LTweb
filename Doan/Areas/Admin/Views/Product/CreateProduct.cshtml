        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">ID loại sản phẩm</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.IDLoaiSP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IDLoaiSP, "", new { @class = "text-danger" })
        </div>
    </div>
